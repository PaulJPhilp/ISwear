---
//import DebugDiv from '../../widgets/DebugDiv.astro';

interface Props {
  color?: string;
  className?: string;
  debug?: boolean;
}

const { color = 'var(--tfl-blue)', className = '' } = Astro.props;

/**
 * StationMarker Component
 *
 * This component is intentionally "dumb" about its positioning, following the principle
 * that components should focus on their core visual properties (width, height, color)
 * while letting parent containers control their positioning.
 */
---

<div class={className}>
  <div class="w-full">
    <div
      class="rounded-full transition-all duration-300"
      style={{
        width: 'var(--marker-width, 10px)',
        height: 'var(--marker-height, 1px)',
        backgroundColor: color,
      }}
    >
    </div>
  </div>
</div>

<style>
  /* Responsive marker sizes */
  div {
    --marker-width: 10px;
    --marker-height: 1px;
  }

  @media (min-width: 640px) {
    div {
      --marker-width: 13px;
      --marker-height: 1px;
    }
  }

  @media (min-width: 768px) {
    div {
      --marker-width: 15px;
      --marker-height: 1px;
    }
  }

  @media (min-width: 1024px) {
    div {
      --marker-width: 17px;
      --marker-height: 1px;
    }
  }

  @media (min-width: 1280px) {
    div {
      --marker-width: 19px;
      --marker-height: 1px;
    }
  }
</style>
